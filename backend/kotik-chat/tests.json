{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "POST with valid message",
      "method": "POST",
      "path": "/",
      "body": {
        "message": "Привет, Котик!"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "response": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with empty message",
      "method": "POST",
      "path": "/",
      "body": {
        "message": ""
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "GET request should fail",
      "method": "GET",
      "path": "/",
      "expectedStatus": 405
    }
  ]
}
